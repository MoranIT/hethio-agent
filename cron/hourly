#!/bin/sh

#
# Minion Hourly Script
#

echo "Run Internet Speedtest every hour"
/opt/minion/bin/speedtest-wrapper.sh

echo "Make sure the Dynamic DNS Location service is running"
if ps aux | grep "ddclient" > /dev/null
then
    echo "It is Running"
else
    echo "It is Stopped, starting"
    /opt/minion/bin/ddclient
fi

echo "Log Current Temperature to running file"
/opt/minion/bin/temp-logger
