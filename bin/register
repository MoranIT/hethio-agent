#!/bin/sh

#
# Minion Registeration
#

echo "Registering Device..."

DATETIME=`date +"%Y-%m-%d %H:%M:%S"`

HOSTNAME=`hostname -f`
#mosquitto_pub -t "$HOSTNAME/system/registration" -m "$DATETIME" -h broker.openmqtt.org -p 8883 --cafile /opt/minion/conf/MoranCA.crt -r
mosquitto_pub -t "$HOSTNAME/system/registration" -m "$DATETIME" -h broker.openmqtt.org -r

echo "$DATETIME [0] Registering Device with HomeOffice" >> /opt/minion/log/minion.log


echo "Done"