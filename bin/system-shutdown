#!/bin/bash
#
# Shutdown Script
#
# This script is executed during a shutdown of the system thanks to an link pushed into /etc/rc6.d/
#

if [ -f "/etc/minion.conf" ]; then
	MPATH=$(awk -F "=" '/MPATH/ {print $2}' /etc/minion.conf)
	cd $MPATH/bin

	source globals.sh

	echo "Shutdown Script..."

	# Send message to central server
	publish "machines/$ID" "{'status':'shutdown'}"

	echo "Done"
	
fi