#!/bin/bash
#
# Publish Information
#
# Collect generic information about the endpoint and publish it.
#

source globals.sh

echo "Info..."

#- HOST - basic stats about the device itself, hostname, time, etc.
HOST="'host':{'hostname':'$HOSTNAME','time':'$DATETIME'}"

# Send message to central server
publish "machines/$ID" "{$HOST}"

echo "Done"