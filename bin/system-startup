#!/bin/bash
#
# Startup Script
#
# This script is executed during a reboot of the system thanks to an link pushed into /etc/rc0.d/
#

if [ -f "/etc/minion.conf" ]; then
	MPATH=$(awk -F "=" '/MPATH/ {print $2}' /etc/minion.conf)
	cd $MPATH/bin

	source globals.sh

	echo "Startup Script..."

	# Send message to central server
	publish "machines/$ID" "{'status':'started'}"

	echo "Done"
	
fi